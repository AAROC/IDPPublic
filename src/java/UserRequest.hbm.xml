<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class dynamic-insert="true" dynamic-update="true" mutable="true" name="it.infn.ct.security.entities.UserRequest" optimistic-lock="version" polymorphism="implicit" select-before-update="false" table="USERS">
        <id name="id" type="long" column="ID" >
            <generator class="increment"/>
        </id>
        <property name="username">
            <column name="USERNAME" />
        </property>
        <property name="givenname">
            <column name="GIVENNAME"/>
        </property>
        <property name="surname">
            <column name="SURNAME"/>
        </property>
        <property name="title">
            <column name="TITLE"/>
        </property>
        <property name="organization">
            <column name="ORGANIZATION"/>
        </property>
        <property name="preferredMail">
            <column name="PRINCIPALMAIL"/>
        </property>
        <property name="additionalMails">
            <column name="MAILS"/>
        </property>
        <property name="password">
            <column name="PASSWORD"/>
        </property>
        <property name="country">
            <column name="COUNTRY"/>
        </property>
        <property name="address">
            <column name="ADDRESS"/>
        </property>
        <property name="phone">
            <column name="PHONE"/>
        </property>
        <property name="description">
            <column name="description"/>
        </property>
        <property name="userHash">
            <column name="USERHASH"/>
        </property>
        <property name="creationTime">
            <column name="CREATION"/>
        </property>
        <property name="valid">
            <column name="VALID"/>
        </property>
    </class>
</hibernate-mapping>
